{
  "name": "@rarui/design-system",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/core/*",
      "packages/*/*/atomics/*"
    ]
  },
  "scripts": {
    "test": "jest --passWithNoTests --no-cache --runInBand --no-watchAll",
    "test:ci": "yarn types:check && jest --ci --coverage",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watch",
    "start:dev": "storybook dev -p 6006",
    "setup": "turbo run build --filter=@rarui/webpack --filter=@rarui/typings",
    "build": "yarn build:packages",
    "build:packages": "yarn build:tokens && yarn build:icons && babel-node -x .ts ./.scripts/build-packages",
    "build:icons": "turbo run build --filter=@rarui/icons",
    "build:tokens": "turbo run build --filter=@rarui/tokens",
    "build:styles": "turbo run build --filter=@rarui/styles",
    "bump:check": "yarn version check",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:stable": "yarn version apply --all",
    "build:storybook": "storybook build",
    "build:docs": "babel-node -x .ts ./.scripts/json-documentation",
    "publish:next": "yarn bump:check && yarn bump:next && npm run build && yarn publish:npm:next",
    "publish:stable": "npm run build && yarn bump:stable && yarn publish:npm:stable",
    "publish:npm:next": "",
    "publish:npm:stable": "",
    "pre:commit": "lint-staged",
    "pre:push": "yarn test:coverage && yarn types:check && yarn bump:check",
    "prepare:husky": "husky install",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx --quiet",
    "lint:fix": "yarn lint --fix",
    "types:check": "tsc --skipLibCheck --noEmit",
    "reset": "yarn clean && rm -rf node_modules .yarn/cache",
    "g:tsc": "cd $INIT_CWD && tsc"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/register": "^7.23.7",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-webpack5": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@testing-library/react": "^14.2.1",
    "@types/babel__core": "^7",
    "@types/babel__register": "^7",
    "@types/eslint": "^8",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vanilla-extract/babel-plugin": "^1.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "storybook": "^8.0.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.12.5",
    "typescript": "^5.4.2"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://git.rarolabs.com.br/frontend/rarui.git"
  },
  "bugs": {
    "url": "https://git.rarolabs.com.br/frontend/rarui/issues"
  },
  "homepage": "https://git.rarolabs.com.br/frontend/rarui#readme",
  "engines": {
    "node": ">=14.17 <=20.x",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.0.2"
}
