{
  "name": "@rarui/design-system",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      ".",
      "packages/*",
      "packages/core/*",
      "packages/implementations/*",
      "packages/implementations/*/*/*/*",
      "packages/implementations/*/*/*/*/*"
    ]
  },
  "scripts": {
    "start:dev": "storybook dev -p 6006",
    "build:storybook": "storybook build && turbo run storybook:build --parallel",
    "start:storybook": "turbo run storybook:dev --parallel",
    "move:storybook": "turbo run storybook:move --parallel",
    "setup": "turbo run build:webpack build:stencil build:tokens build:typings build:icons --parallel",
    "build": "yarn build:packages && yarn format:files",
    "build:packages": "turbo run setup && babel-node -x .ts ./.scripts/build-packages",
    "build:icons": "turbo run build --filter=@rarui/icons",
    "build:tokens": "turbo run build --filter=@rarui/tokens",
    "build:styles": "turbo run build --filter=@rarui/styles",
    "build:typings": "turbo run build --filter=@rarui/typings",
    "build:webpack": "turbo run build --filter=@rarui/webpack",
    "build:stencil": "turbo run build --filter=@rarui/stencil",
    "bump:check": "yarn version check",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:stable": "yarn version apply --all",
    "build:docs": "babel-node -x .ts ./.scripts/json-documentation && yarn format:docs",
    "test": "turbo run test --filter=!@rarui/design-system",
    "test:ci": "turbo run test:ci --filter=!@rarui/design-system",
    "test:coverage": "turbo run test:coverage --filter=!@rarui/design-system",
    "test:staged": "turbo run test:staged --filter=!@rarui/design-system",
    "test:watch": "yarn test --watch",
    "format:docs": "prettier --write \"**/*.docs.json\"",
    "format:files": "prettier --write \"**/*.+(js|jsx|tsx|ts)\"",
    "publish:next": "yarn bump:check && yarn bump:next && npm run build && yarn publish:npm:next",
    "publish:stable": "npm run build && yarn bump:stable && yarn publish:npm:stable",
    "publish:npm:next": "yarn workspaces foreach -A -p --exclude @rarui/design-system --exclude rarui-helper npm publish --tolerate-republish --access public --tag next",
    "publish:npm:stable": "yarn workspaces foreach -A -p --exclude @rarui/design-system --exclude rarui-helper npm publish --tolerate-republish --access public",
    "pre:commit": "lint-staged",
    "pre:push": "yarn test:coverage && yarn bump:check && yarn releases:check",
    "prepare:husky": "husky",
    "releases:build": "babel-node -x .ts ./.scripts/generate-releases.ts",
    "releases:launch": "babel-node -x .ts ./.scripts/launch-releases.ts",
    "releases:check": "test -f releases.json || (echo \"Releases file not found. Run 'yarn releases:build' before push\" && exit 1)",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx --quiet",
    "lint:fix": "yarn lint --fix",
    "types:check": "tsc --skipLibCheck --noEmit",
    "reset": "yarn clean && rm -rf node_modules .yarn/cache .turbo",
    "clean": "yarn workspaces foreach -A -p --exclude @rarui/design-system run clean",
    "g:update:tsconfig": "babel-node -x .ts ./.scripts/update-tsconfig",
    "g:tsc": "cd $INIT_CWD && tsc",
    "g:storybook": "storybook",
    "g:turbo": "turbo"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/register": "^7.23.7",
    "@chromatic-com/storybook": "^1.6.1",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@storybook/addon-essentials": "^8.2.5",
    "@storybook/addon-interactions": "^8.2.5",
    "@storybook/addon-links": "^8.2.5",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.4",
    "@storybook/blocks": "^8.2.5",
    "@storybook/html": "^8.2.5",
    "@storybook/html-vite": "^8.2.5",
    "@storybook/react": "^8.2.5",
    "@storybook/react-webpack5": "^8.2.5",
    "@storybook/test": "^8.2.5",
    "@storybook/web-components-vite": "^8.2.5",
    "@testing-library/react": "^14.2.1",
    "@types/babel__core": "^7",
    "@types/babel__register": "^7",
    "@types/eslint": "^8",
    "@types/prismjs": "^1",
    "@types/react-copy-to-clipboard": "^5",
    "@types/react-syntax-highlighter": "^15",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vanilla-extract/babel-plugin": "^1.2.0",
    "@vanilla-extract/vite-plugin": "^4.0.13",
    "babel-plugin-module-resolver": "^5.0.0",
    "code-formatter": "^0.0.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lit": "^3.2.0",
    "prettier": "^3.2.5",
    "react-copy-to-clipboard": "^5.1.0",
    "react-element-to-jsx-string": "^15.0.0",
    "react-element-to-string": "^1.0.2",
    "react-keyed-flatten-children": "^3.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "story-wc-generator": "^1.0.0",
    "storybook": "^8.2.5",
    "storybook-addon-stencil": "^0.2.1",
    "storybook-dark-mode": "^4.0.2",
    "turbo": "^2.0.14",
    "typescript": "^5.4.2",
    "vite": "^5.2.6"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://git.rarolabs.com.br/frontend/rarui.git"
  },
  "bugs": {
    "url": "https://git.rarolabs.com.br/frontend/rarui/issues"
  },
  "homepage": "https://git.rarolabs.com.br/frontend/rarui#readme",
  "engines": {
    "node": ">=14.17 <=20.x",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.0.2"
}
